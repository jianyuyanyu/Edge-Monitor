{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ApplicationSettings": {
    "DefaultMonitorInterval": 5,
    "AutoSaveEnabled": true,
    "NotificationsEnabled": true,
    "LogRetentionDays": 30,
    "MaxLogEntries": 1000
  },
  "EdgeMonitoring": {
    "CpuThreshold": 30.0,
    "MemoryThresholdMB": 2048,
    "CheckInterval": 5,
    "EnableAutoKill": true,
    "RequireAdminRights": true
  },
  "UI": {
    "Theme": "Light",
    "Language": "zh-CN",
    "WindowWidth": 800,
    "WindowHeight": 600,
    "CloseToTray": null,
    "RememberCloseChoice": false,
    "StartupHideToTray": false
  }
}
